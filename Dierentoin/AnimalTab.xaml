<TabItem x:Class="Dierentoin.AnimalTab"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Dierentoin"
             mc:Ignorable="d">
    <Grid Height="250" Width="250">
        <Label Name="AnimalType" Content="Animal" FontSize="14"  Margin="-5,-15,10,205" />
        <TextBox Name="AnimalName" Text="Animal" FontSize="22" TextWrapping="NoWrap" Margin="0,10,10,205" />

        <Button Name="AnimalEatButton" Content="Eat" Margin="50,50,50,175" Click="Eat" />

        <Label Name="AnimalEnergyText" Content="Energy: 100" FontSize="10" HorizontalAlignment="Center" Margin="0,80,10,0" />
        <ProgressBar Name="AnimalEnergy" Margin="0,100,10,0" />
    </Grid>
</TabItem>
